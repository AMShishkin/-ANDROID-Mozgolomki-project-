<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/puzzle_layout_margin_left_right"
        android:layout_marginRight="@dimen/puzzle_layout_margin_left_right"
        android:background="@drawable/view_selected"
        android:orientation="vertical"
        tools:ignore="UselessParent">



        <LinearLayout
            android:id="@+id/itemTitleGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/view_basic"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_main_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:fontFamily="serif"
                android:gravity="left"
                android:text="@string/activity_main_item_number"
                android:textColor="#000000"
                android:textSize="@dimen/main_list_item_title_number_text_size"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/titleItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/activity_main_item_title"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/main_list_item_title_number_text_size"/>

            <TextView
                android:id="@+id/complexityItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:gravity="end"
                android:text="@string/activity_main_item_complexity"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/main_list_item_state_complexity_text_size"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemDescriptionGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descriptionItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:textAllCaps="true"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:text="@string/activity_main_item_description"
                android:textColor="#000000"
                android:textSize="@dimen/main_list_item_description_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemStateGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemFavorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="@string/activity_main_item_favorite"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="@dimen/main_list_item_favorite_text_size"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/state_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/activity_main_item_state"
                android:textAlignment="viewEnd"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="@dimen/main_list_item_state_complexity_text_size"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />


        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>

